<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}{% if title %} — Creative software agency{% endif %}</title>
		<meta name="description" content="{{ description or metadata.description }}">
		<meta name="keywords" content="{{ metadata.keywords }}">
		
		{#- Open Graph meta tags #}
		<meta property="og:title" content="{{ title or metadata.title }}{% if title %} — Creative software agency{% endif %}">
		<meta property="og:description" content="{{ description or metadata.description }}">
		<meta property="og:url" content="{{ metadata.url }}{{ page.url }}">
		<meta property="og:image" content="{{ metadata.url }}/images/icons/other-dev-intro.png">
		<meta property="og:type" content="{% if page.url == '/' %}website{% else %}article{% endif %}">
		<meta property="og:site_name" content="{{ metadata.title }}">
		
		{#- Twitter Card meta tags #}
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content="{{ metadata.twitter }}">
		<meta name="twitter:title" content="{{ title or metadata.title }}{% if title %} — Creative software agency{% endif %}">
		<meta name="twitter:description" content="{{ description or metadata.description }}">
		<meta name="twitter:image" content="{{ metadata.url }}/images/icons/other-dev-intro.png">
		
		{#- RSS Feed #}
		<link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
		
		{#- Favicon and touch icons #}
		<link rel="icon" href="{{ metadata.logo }}" type="image/png">
		<link rel="apple-touch-icon" href="{{ metadata.logo }}">
		
		{#- Canonical URL #}
		<link rel="canonical" href="{{ metadata.url }}{{ page.url }}">

		{#- Uncomment this if you’d like folks to know that you used Eleventy to build your site!  #}
		{#- <meta name="generator" content="{{ eleventy.generator }}"> #}

		{#-
		Plain-text bundles are provided via the `eleventy-plugin-bundle` plugin:
		1. CSS:
			* Add to a per-page bundle using `{% css %}{% endcss %}`
			* Retrieve bundle content using `{% getBundle "css" %}` or `{% getBundleFileUrl "css" %}`
		2. Or for JavaScript:
			* Add to a per-page bundle using `{% js %}{% endjs %}`
			* Retrieve via `{% getBundle "js" %}` or `{% getBundleFileUrl "js" %}`
		3. Learn more: https://github.com/11ty/eleventy-plugin-bundle
		#}

		{#- Add CSS to the bundle #}
		<style>/* This is an arbitrary CSS string added to the bundle */</style>

		{#- Link to processed CSS file #}
		<link rel="stylesheet" href="/css/index.css">

		{#- Or you can add from node_modules #}
		{# <style>{% include "node_modules/something.css" %}</style> #}

		{#- Render the CSS bundle using inlined CSS (for the fastest site performance in production) #}
		<style>{% getBundle "css" %}</style>

		{#- Renders the CSS bundle using a separate file, if you can't set CSP directive style-src: 'unsafe-inline' #}
		{#- <link rel="stylesheet" href="{% getBundleFileUrl "css" %}"> #}

		{#- Add the heading-anchors web component to the JavaScript bundle #}
		<script type="module">{% include "node_modules/@zachleat/heading-anchors/heading-anchors.js" %}</script>
		
		{#- Structured Data (JSON-LD) #}
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "{{ metadata.businessType }}",
			"name": "{{ metadata.title }}",
			"url": "{{ metadata.url }}",
			"logo": "{{ metadata.url }}{{ metadata.logo }}",
			"description": "{{ metadata.description }}",
			"contactPoint": {
				"@type": "ContactPoint",
				"telephone": "{{ metadata.contactPhone }}",
				"email": "{{ metadata.contactEmail }}",
				"contactType": "customer service",
				"areaServed": {{ metadata.serviceAreas | dump | safe }},
				"availableLanguage": {{ metadata.languages | dump | safe }}
			},
			"sameAs": [
				"{{ metadata.gmbLink }}",
				"https://twitter.com/{{ metadata.twitter | replace('@', '') }}"
			],
			"potentialAction": {
				"@type": "SearchAction",
				"target": "{{ metadata.url }}/search?q={search_term_string}",
				"query-input": "required name=search_term_string"
			}
		}
		</script>
	</head>
	<body>
		<div>
			<a class="hidden" href="#main">Skip to content</a>
		</div>
		
		{% include "navigation.njk" %}
		
		<div id="smooth-content" style="will-change: transform">
			<div
				class="noise-bg fixed w-full"
				style="flex-grow: 1 1 auto;will-change: transform; height: 100%;"
				aria-hidden="true">
				<svg>
					<filter id="noise-bg-fx">
						<feTurbulence baseFrequency="0.5"></feTurbulence>
					</filter>
				</svg>
			</div>

			<main id="main" class="page snap-always relative snap-mandatory snap-y smooth-content no-scrollbar">
				<div class="snap-center">
					<heading-anchors>
						{{ content | safe }}
					</heading-anchors>
				</div>
			</main>
		</div>

		<footer class="mt-16 px-4 py-8 border-t border-black/20">
			<div class="max-w-4xl mx-auto">
				<div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
					<div class="font-queens text-lg">
						<span>{{ metadata.title }}</span>
					</div>
					<div class="flex flex-col md:flex-row gap-4 md:gap-8 text-sm">
						<p class="font-twk">
							<a href="mailto:{{ metadata.contactEmail }}" class="hover:opacity-75 transition-opacity">{{ metadata.contactEmail }}</a>
						</p>
						<p class="font-twk">
							<a href="tel:{{ metadata.contactPhone }}" class="hover:opacity-75 transition-opacity">{{ metadata.contactPhone }}</a>
						</p>
						<p class="font-twk text-xs opacity-75">
							© 2025 Other Dev®
						</p>
					</div>
				</div>
			</div>
		</footer>

		<!-- This page `{{ page.url }}` was built on {% currentBuildDate %} -->
		<script type="module" src="{% getBundleFileUrl "js" %}"></script>
	</body>
</html>
